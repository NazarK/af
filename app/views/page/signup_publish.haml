- @step=3
= render "signup_steps"

<form accept-charset="UTF-8" action="/users" class="user_new" id="user_new" method="post">
<div style="margin:0;padding:0;display:inline">
<input name="utf8" type="hidden" value="&#x2713;" />
= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
</div> 
        
<p> 
<label for="user_email">Email</label> 
<br> 
<input class="bigfont" id="user_email" name="user[email]" size="30" type="email" /> 
</p> 
<p> 
<label for="user_password">Password</label> 
<br> 
<input class="bigfont" id="user_password" name="user[password]" size="30" type="password" /> 
</p> 
<p> 
<label for="user_password_confirmation">Password confirmation</label> 
<br> 
<input class="bigfont" id="user_password_confirmation" name="user[password_confirmation]" size="30" type="password" /> 
</p> 
<p><input id="user_submit" name="commit" type="submit" value="Sign up" /></p> 
</form> 
