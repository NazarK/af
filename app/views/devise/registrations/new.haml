- @step=3
= render "page/signup_steps"

%div.smallWhiteBack

  %h2 Sign up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %p
      %div
        = f.label :email
      = f.email_field :email, :class => "bigfont"
    %p
      %div
        = f.label :password
      = f.password_field :password, :class => "bigfont"
      <div style='font-size:10px;margin-top:-4px;'>(minimum 6 characters)</div>
    %p
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, :class => "bigfont"
    %p= f.submit "Sign up"
